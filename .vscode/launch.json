    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole"
        },
        {
            "name": "clang - Build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "C/C++: clang build active file"
        },
        {
            "name": "scrapy - spider",
            "type": "debugpy",
            "request": "launch",
            "module": "scrapy.cmdline",
            "justMyCode": false,
            "cwd": "${fileDirname}/../../",
            "env": {
                "PYTHONUNBUFFERED": "1",
            },
            "console": "internalConsole",
            "args": ["crawl",  "b4sport"]
        }
    ]
}